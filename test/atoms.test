#!/bin/bash
set -euxo pipefail

# tests that atoms are parsed correctly

# if unset we'll expect our input to reside in the directory alongside our script
DIR=$(dirname "$0")
SRCDIR=${SRCDIR:-$DIR/..}
BUILDDIR=${BUILDDIR:-$DIR/..}

IN="$SRCDIR/test/atoms.in"
EXPECT="$SRCDIR/test/atoms.expect"
OUT="$BUILDDIR/test/atoms.out"

"$BUILDDIR/punky" < "$IN" > "$OUT"
diff "$EXPECT" "$OUT"
